<Window x:Class="SearchStoredProcedures.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ComboBox Name="SearchText" 
                  IsTextSearchCaseSensitive="False" IsTextSearchEnabled="True" IsEditable="true" 
                  Text="{Binding Path=Name,Mode=OneWay}" 
                  HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" KeyDown="SearchText_KeyDown" >
            <ComboBox.ItemTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding Path=Name,Mode=OneWay}" />
            </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button Name="Search" Content="Search" HorizontalAlignment="Left" Margin="215,9,0,0" VerticalAlignment="Top" Width="75" Click="Search_Click"/>
        <TextBox Name="DefinitionTextBox" HorizontalAlignment="Stretch" Margin="10,41,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Stretch"  />
    </Grid>
</Window>
